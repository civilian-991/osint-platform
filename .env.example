# Neon Database
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# Neon Auth (Better Auth)
NEXT_PUBLIC_NEON_AUTH_URL=https://your-endpoint.neonauth.region.aws.neon.tech/neondb/auth
NEON_AUTH_BASE_URL=https://your-endpoint.neonauth.region.aws.neon.tech/neondb/auth

# Maps
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# News APIs (optional)
NEWSDATA_API_KEY=your_newsdata_api_key

# Cron Secret (for Vercel cron jobs)
CRON_SECRET=your_cron_secret

# Gemini AI (for ML/AI features)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_FLASH_MODEL=gemini-2.0-flash-exp
GEMINI_PRO_MODEL=gemini-1.5-pro
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_REQUESTS_PER_MINUTE=15

# ML Processing (set to true to enable ML features)
ENABLE_ML_PROCESSING=false
